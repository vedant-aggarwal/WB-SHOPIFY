{% stylesheet %}
  .footer {
    color: #8B4513;
    padding: 3rem 0 1rem;
    font-family: inherit;
    width: 100vw;
    margin-left: calc(50% - 50vw);
  }
  
  .footer__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    gap: 2rem;
    align-items: start;
  }
  
  .footer__brand {
    grid-column: span 1;
  }
  
  .footer__logo {
    font-size: 1.5rem;
    font-weight: bold;
    color: #D2691E;
    margin: 0 0 1rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }
  
  .footer__copyright {
    font-size: 0.875rem;
    color: #8B4513;
    margin: 0;
    line-height: 1.4;
  }
  
  .footer__section {
    display: flex;
    flex-direction: column;
  }
  
  .footer__heading {
    font-size: 1rem;
    font-weight: 600;
    color: #8B4513;
    margin: 0 0 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .footer__links {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  
  .footer__links li {
    margin-bottom: 0.5rem;
  }
  
  .footer__link {
    color: #8B4513;
    text-decoration: none;
    font-size: 0.875rem;
    line-height: 1.4;
    transition: color 0.3s ease;
  }
  
  .footer__link:hover {
    color: #A0522D;
  }
  
  .footer__social {
    display: flex;
    gap: 0.75rem;
    margin-top: 1rem;
  }
  
  .footer__social-link {
    color: #8B4513;
    transition: color 0.3s ease;
  }
  
  .footer__social-link:hover {
    color: #A0522D;
  }
  
  .footer__contact {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .footer__contact-item {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }
  
  .footer__contact-icon {
    color: #8B4513;
    flex-shrink: 0;
    margin-top: 0.125rem;
  }
  
  .footer__contact-text {
    font-size: 0.875rem;
    color: #8B4513;
    line-height: 1.4;
  }
  
  .footer__address {
    display: flex;
    flex-direction: column;
  }
  
  .footer__map-link {
    font-size: 0.8rem;
    margin-top: 0.5rem;
    text-decoration: underline;
  }
  
  .footer__phone {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .footer__phone-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }
  
  .footer__phone-label {
    font-size: 0.8rem;
    color: #8B4513;
    font-weight: 600;
  }
  
  .footer__phone-numbers {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }
  
  .footer__phone-numbers a {
    font-size: 0.875rem;
  }
  
  .footer__hours {
    font-size: 0.8rem;
    color: #8B4513;
    opacity: 0.8;
  }
  
  .footer__payment {
    border-top: 1px solid rgba(139, 69, 19, 0.2);
    padding: 1.5rem 0 0;
    margin-top: 2rem;
  }
  
  .footer__payment-icons {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }
  
  .footer__payment-icons svg {
    height: 30px;
    width: auto;
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }
  
  .footer__payment-icons svg:hover {
    opacity: 1;
  }
  
  @media (max-width: 768px) {
    .footer__container {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }
    
    .footer__brand {
      grid-column: span 1;
    }
    
    .footer__social {
      justify-content: center;
    }
    
    .footer__contact-item {
      justify-content: center;
      text-align: left;
    }
    
    .footer__payment-icons {
      justify-content: center;
    }
  }
  
  @media (max-width: 1024px) and (min-width: 769px) {
    .footer__container {
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }
    
    .footer__brand {
      grid-column: span 2;
      text-align: center;
    }
    
    .footer__social {
      justify-content: center;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.footer",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "t:labels.show_payment_icons",
      "default": true
    }
  ]
}
{% endschema %}
