{% stylesheet %}
  .page-content {
    padding: 2rem 0;
    color: #8B4513;
    font-family: inherit;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .page-title {
    font-size: 2.5rem;
    font-weight: bold;
    color: #8B4513;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }
  
  .page-body {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .content-section h2 {
    font-size: 1.5rem;
    color: #8B4513;
    margin: 2rem 0 1rem 0;
    font-weight: 600;
  }
  
  .content-section p {
    line-height: 1.6;
    margin-bottom: 1rem;
    font-size: 1rem;
  }
  
  .content-section ul {
    margin: 1rem 0;
    padding-left: 2rem;
  }
  
  .content-section li {
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }
  
  .content-section a {
    color: #8B4513;
    text-decoration: underline;
  }
  
  .content-section a:hover {
    color: #A0522D;
  }
  
  @media (max-width: 768px) {
    .page-title {
      font-size: 2rem;
    }
    
    .content-section h2 {
      font-size: 1.25rem;
    }
  }
{% endstylesheet %}

