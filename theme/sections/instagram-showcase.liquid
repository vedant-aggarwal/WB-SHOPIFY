<script>
document.addEventListener('DOMContentLoaded', function() {
  const tabs = document.querySelectorAll('.instagram-showcase__tab');
  const panels = document.querySelectorAll('.instagram-showcase__panel');
  const videosGrid = document.getElementById('videos-grid');
  
  // Tab switching
  tabs.forEach(tab => {
    tab.addEventListener('click', () => {
      // Remove active from all tabs and panels
      tabs.forEach(t => t.classList.remove('active'));
      panels.forEach(p => p.classList.remove('active'));
      
      // Add active to clicked tab
      tab.classList.add('active');
      
      // Show corresponding panel
      const targetPanel = document.getElementById(tab.dataset.tab + '-panel');
      if (targetPanel) {
        targetPanel.classList.add('active');
        
        // Load videos when videos tab is clicked
        if (tab.dataset.tab === 'videos') {
          loadInstagramVideos();
        }
      }
    });
  });
  
  // Instagram API integration
  async function loadInstagramVideos() {
    try {
      // Initialize Instagram API with access token from settings
      const accessToken = '{{ section.settings.instagram_access_token }}';
      if (window.InstagramAPI) {
        window.InstagramAPI.init(accessToken);
        const videos = await window.InstagramAPI.fetchUserMedia();
        
        // Sort videos: pinned first, then by likes
        const sortedVideos = videos.sort((a, b) => {
          if (a.isPinned && !b.isPinned) return -1;
          if (!a.isPinned && b.isPinned) return 1;
          return b.likes - a.likes;
        });
        
        renderVideos(sortedVideos);
      } else {
        renderMockVideos();
      }
    } catch (error) {
      console.error('Error loading Instagram videos:', error);
      renderMockVideos();
    }
  }
  
  function renderMockVideos() {
    // Mock data for demonstration
    const mockVideos = [
